<form method="post" action="{{ path('peloton_delete', {'tournament' : peloton.tournament.id, 'id': peloton.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ peloton.id) }}">
    <button class="btn btn-danger">Delete</button>
</form>