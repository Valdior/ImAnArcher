
{% extends 'base.html.twig' %}

{% block title %}Platoon index{% endblock %}

{% block body %}
    <h1>Platoon index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>MaxParticipant</th>
                <th>Type</th>
                <th>StartTime</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for platoon in platoons %}
            <tr>
                <td>{{ platoon.id }}</td>
                <td>{{ platoon.maxParticipant }}</td>
                <td>{{ platoon.type }}</td>
                <td>{{ platoon.startTime ? platoon.startTime|date('H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('platoon_show', {'id': platoon.id}) }}">show</a>
                    <a href="{{ path('platoon_edit', {'id': platoon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('platoon_new') }}">Create new</a>
{% endblock %}